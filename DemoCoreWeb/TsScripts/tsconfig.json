{
	"compileOnSave": true,
	"compilerOptions": {
		"outDir": "../Scripts",
		"rootDir": "src",
		"sourceMap": true,
		"declaration": false,
		"module": "none",
		"moduleResolution": "classic",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "ES2022",
		"lib": [
			"ES2022",
			"dom"
		]
	},
	"include": [
		"src/**/*.ts"
	]
}